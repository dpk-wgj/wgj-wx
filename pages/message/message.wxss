page{
  height: 100%;
  background: #f4f6f8; 
}

.header{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #DCDCDC;
  background: #fff;
}
.header .title{
  height: 40px; 
  width: 180rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
}
.header .title.selected{
  border-bottom: 7rpx solid #000;
  font-weight: 600;
}

 scroll-view{
  height: 100%;
} 


.content{
  font-size: 30rpx;
  background: #fff;
  margin: 10px 20rpx;
  border: 1px solid #fff;
  border-radius: 5px;
  box-shadow:3px 5px 10px #e0e0e0; 
  padding: 10px 20rpx;
}
.content .title{
  color: rgb(57, 57, 57);
}
.content .time1{
  border-bottom: 1px solid #e0e0e0;
  font-size: 25rpx;
  color: rgb(130, 130, 130);
  padding: 10px 0;
}
.content .time2{
  font-size: 25rpx;
  color: rgb(130, 130, 130);
  padding: 10px 0;
  float: right;
}
.content .response{
  padding-top: 39px;
  color: red;
}
.content .time11{
  font-size: 25rpx;
  color: rgb(130, 130, 130);
  padding: 10px 0;
}
.content .cancel{
  font-size: 28rpx;
  color: #696969;
  border: 1px solid #e0e0e0;
  margin-left: 470rpx;
  padding: 5px 20rpx;
  width: 115rpx;
  align-content: center;
  border-radius: 5px;
  background: #e0e0e0
}