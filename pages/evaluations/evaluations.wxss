page{
  background: #f4f6f8;
}
.header{
  padding: 10rpx 30rpx;
  font-size: 35rpx;
  color: rgb(152, 152, 152);
  border-bottom: 1px solid #fff;
  /* box-shadow: 10px 10px 5px #888888; */
  background: #fff;
}
.content{
  font-size: 30rpx;
  background: #fff;
  margin: 10px 20rpx;
  border: 1px solid #fff;
  border-radius: 5px;
  box-shadow:3px 5px 10px #e0e0e0; 
  padding: 10px 20rpx;
}
.content .top{
  display: flex;
}
.content .star{
  font-size: 30rpx;
  color: rgb(130, 130, 130);
}
.content .star image{
  width: 35rpx;
  height: 35rpx;
}
.content .time{
  margin-left: 360rpx;
  font-size: 25rpx;
  color: rgb(130, 130, 130);
  padding: 10px 0;
}