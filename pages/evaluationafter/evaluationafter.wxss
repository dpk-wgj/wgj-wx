@import '../../styles/driver.wxss';
@import '../../styles/didi-ft.wxss';

.evaluation{
    border-top: 1px solid #f5f5f5;
    width: 100%;
     /* background: red;  */
    /* margin-top: 195rpx; */
    text-align: center;
}
.evaluation-name{
    margin-top: 40rpx;
    color: #666666;
}
.evaluation-stars{
    width: 400rpx;
    display: flex;
    justify-content: space-around;
    margin-left: 150rpx;
    margin-top: 10rpx;
}
.stars-solid{
    padding-right: 10rpx;
    color:#ffd936;
    font-size: 50rpx;
}
.stars-empty{
    color:#ffd936;
    padding-right: 10rpx;
    font-size: 50rpx;
}

.list{
  padding: 20rpx;  
  color: rgb(154, 154, 154);
  /* background: red; */
  height: 110px;
  border-bottom: 1px solid rgb(245, 245, 245)
}
.list .tab{
  font-size: 30rpx;
  margin-bottom: 5px;
  margin-left: 50rpx;
}
.choose{
  width: 30%;
  border: 1rpx solid black;
  border-radius:12rpx;
  margin: 10px 50rpx 5px;
  float: left;
  text-align: center;
  font-size: 30rpx;
}
.ischecked{
  width: 30%;
  border: 1rpx solid red;
  color: orange;
  border-radius:12rpx;
  margin: 10px 50rpx 5px;
  float: left;
  text-align: center;
  font-size: 30rpx;
}

.msg{
  margin: 5px 10rpx;
  border: 1px solid #666666;
  border-radius: 10px;
  padding: 10px;
  height: 100px;
}

.ft button{
  background: #000;
  color: #fff;
}
